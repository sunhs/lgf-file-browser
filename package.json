{
	"name": "lgf-file-browser",
	"displayName": "lgf-file-browser",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.57.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:lgf-file-browser.show",
		"onCommand:lgf-file-browser.goUp",
		"onCommand:lgf-file-browser.accept",
		"onCommand:lgf-file-browser.toggleHidden",
		"onCommand:lgf-file-browser.toggleFilter",
		"onCommand:lgf-file-browser.goToHome",
		"onCommand:lgf-file-browser.goToRoot"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "lgf file browser",
				"properties": {
					"lgf-file-browser.filterFilePatterns": {
						"type": "array",
						"default": []
					}
				}
			}
		],
		"commands": [
			{
				"command": "lgf-file-browser.show",
				"title": "Show LGF File Browser"
			}
		],
		"keybindings": [
            {
                "key": "backspace",
                "command": "lgf-file-browser.goUp",
                "when": "inLgfFileBrowser && lgfFileBrowserEmpty"
            },
            {
                "key": "shift+`",
                "command": "lgf-file-browser.goToHome",
                "when": "inLgfFileBrowser && lgfFileBrowserEmpty"
            },
            {
                "key": "/",
                "command": "lgf-file-browser.goToRoot",
                "when": "inLgfFileBrowser && lgfFileBrowserEmpty"
            },
            {
                "key": "enter",
                "command": "lgf-file-browser.accept",
                "when": "inLgfFileBrowser"
            },
            {
                "key": "tab",
                "command": "lgf-file-browser.accept",
                "when": "inLgfFileBrowser"
            },
            {
                "key": "ctrl+h",
                "command": "lgf-file-browser.toggleHidden",
                "when": "inLgfFileBrowser"
            },
            {
                "key": "ctrl+f",
                "command": "lgf-file-browser.toggleFilter",
                "when": "inLgfFileBrowser"
            }
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.57.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	}
}